import React, { useState, useEffect } from 'react';
import { ArrowLeft, Settings, Video, Edit, CheckCircle } from 'lucide-react';
import ZoomConfigForm from './ZoomConfigForm';
import SystemConfigService from '../../services/api/SystemConfigService';
import Swal from 'sweetalert2';

const ConfiguracionTab = ({ onBack }) => {
    const [currentConfig, setCurrentConfig] = useState(null);
    const [isLoading, setIsLoading] = useState(true);
    const [isEditing, setIsEditing] = useState(false);
    const [isSaving, setIsSaving] = useState(false);

    useEffect(() => {
        loadCurrentConfig();
    }, []);

    const loadCurrentConfig = async () => {
        setIsLoading(true);
        try {
            const response = await SystemConfigService.getZoomConfig();
            if (response.success) {
                setCurrentConfig(response.data);
            }
        } catch (error) {
            console.error('Error al cargar configuración:', error);
        } finally {
            setIsLoading(false);
        }
    };

    const handleSaveConfig = async (credentials) => {
        setIsSaving(true);
        try {
            const response = await SystemConfigService.updateZoomConfig(credentials);
            
            if (response.success) {
                await Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: 'Configuración de Zoom actualizada exitosamente',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    backdrop: false
                });
                
                setIsEditing(false);
                await loadCurrentConfig();
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.response?.data?.detail || error.message || 'Error al guardar la configuración'
            });
        } finally {
            setIsSaving(false);
        }
    };

    const isConfigured = currentConfig && 
        currentConfig.sdk_key && 
        currentConfig.account_id && 
        currentConfig.client_id;

    if (isLoading) {
        return (
            <div className="flex items-center justify-center min-h-screen">
                <div className="text-center">
                    <svg className="animate-spin h-12 w-12 text-blue-600 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                        <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <p className="text-gray-600">Cargando configuración...</p>
                </div>
            </div>
        );
    }

    return (
        <div className="space-y-6">
            <div className="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <div className="flex items-center gap-4">
                    {onBack && (
                        <button
                            onClick={onBack}
                            className="p-2 hover:bg-gray-100 rounded-lg transition-colors"
                        >
                            <ArrowLeft size={24} className="text-gray-600" />
                        </button>
                    )}
                    <div className="flex items-center gap-3">
                        <div className="w-12 h-12 rounded-lg bg-gradient-to-br from-[#3498db] to-[#2980b9] flex items-center justify-center text-white shadow-lg">
                            <Settings size={24} />
                        </div>
                        <div>
                            <h1 className="text-3xl font-bold text-gray-800">
                                Configuración de Zoom
                            </h1>
                            <p className="text-gray-600 mt-1">
                                Gestiona las credenciales de Zoom para las reuniones virtuales
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            {isConfigured && !isEditing && (
                <div className="border-2 rounded-xl p-6 bg-green-50 border-green-200">
                    <div className="flex items-start justify-between">
                        <div className="flex items-start gap-3">
                            <CheckCircle size={24} className="text-green-600 mt-1" />
                            <div className="flex-1">
                                <h3 className="font-bold text-lg mb-2 text-green-800">
                                    Configuración Activa
                                </h3>
                                <p className="text-sm text-green-700 mb-4">
                                    Las credenciales de Zoom están configuradas y activas. Las reuniones virtuales están habilitadas.
                                </p>

                                {currentConfig && (
                                    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                        <div className="bg-white p-3 rounded-lg border border-green-200">
                                            <span className="text-xs text-gray-600 block mb-1">SDK Key</span>
                                            <p className="font-mono text-sm text-gray-800">{currentConfig.sdk_key || 'No configurado'}</p>
                                        </div>
                                        <div className="bg-white p-3 rounded-lg border border-green-200">
                                            <span className="text-xs text-gray-600 block mb-1">SDK Secret</span>
                                            <p className="font-mono text-sm text-gray-800">{currentConfig.sdk_secret || 'No configurado'}</p>
                                        </div>
                                        <div className="bg-white p-3 rounded-lg border border-green-200">
                                            <span className="text-xs text-gray-600 block mb-1">Account ID</span>
                                            <p className="font-mono text-sm text-gray-800">{currentConfig.account_id || 'No configurado'}</p>
                                        </div>
                                        <div className="bg-white p-3 rounded-lg border border-green-200">
                                            <span className="text-xs text-gray-600 block mb-1">Client ID</span>
                                            <p className="font-mono text-sm text-gray-800">{currentConfig.client_id || 'No configurado'}</p>
                                        </div>
                                        <div className="bg-white p-3 rounded-lg border border-green-200">
                                            <span className="text-xs text-gray-600 block mb-1">Client Secret</span>
                                            <p className="font-mono text-sm text-gray-800">{currentConfig.client_secret || 'No configurado'}</p>
                                        </div>
                                    </div>
                                )}
                            </div>
                        </div>
                        <button
                            onClick={() => setIsEditing(true)}
                            className="flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-lg hover:shadow-lg transition-all"
                        >
                            <Edit size={18} />
                            Editar
                        </button>
                    </div>
                </div>
            )}

            {(!isConfigured || isEditing) && (
                <div className="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                    <div className="flex items-center gap-3 mb-6">
                        <div className="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white">
                            <Video size={20} />
                        </div>
                        <div>
                            <h2 className="text-xl font-bold text-gray-800">
                                {isEditing ? 'Editar Configuración' : 'Configurar Credenciales de Zoom'}
                            </h2>
                            <p className="text-sm text-gray-600">
                                {isEditing 
                                    ? 'Modifica las credenciales existentes' 
                                    : 'Ingresa las credenciales de tu aplicación Zoom'
                                }
                            </p>
                        </div>
                    </div>

                    <ZoomConfigForm
                        initialValues={currentConfig || {}}
                        onSave={handleSaveConfig}
                        onCancel={isEditing ? () => setIsEditing(false) : null}
                        isSaving={isSaving}
                        showTestButton={true}
                    />
                </div>
            )}
        </div>
    );
};

export default ConfiguracionTab;
