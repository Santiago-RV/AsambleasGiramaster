{
  "info": {
    "name": "Sistema de Encuestas - Asambleas",
    "description": "Colección completa para probar el sistema de encuestas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "poll_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "poll_code",
      "value": "",
      "type": "string"
    },
    {
      "key": "meeting_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Autenticación",
      "item": [
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.access_token) {",
                  "        pm.collectionVariables.set('admin_token', response.data.access_token);",
                  "        console.log('Token guardado:', response.data.access_token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "description": "Login como administrador para obtener el token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Crear Encuesta",
      "item": [
        {
          "name": "Crear Encuesta Simple (Sí/No)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data) {",
                  "        pm.collectionVariables.set('poll_id', response.data.id);",
                  "        pm.collectionVariables.set('poll_code', response.data.poll_code);",
                  "        console.log('Poll ID:', response.data.id);",
                  "        console.log('Poll Code:', response.data.poll_code);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"int_meeting_id\": {{meeting_id}},\n  \"str_title\": \"¿Aprobar la renovación del ascensor?\",\n  \"str_description\": \"Votación para aprobar el presupuesto de $50,000 para renovar el ascensor del edificio\",\n  \"str_poll_type\": \"single\",\n  \"bln_is_anonymous\": false,\n  \"bln_requires_quorum\": true,\n  \"dec_minimum_quorum_percentage\": 51.0,\n  \"bln_allows_abstention\": true,\n  \"int_max_selections\": 1,\n  \"int_duration_minutes\": 30,\n  \"options\": [\n    {\n      \"str_option_text\": \"A favor\",\n      \"int_option_order\": 1\n    },\n    {\n      \"str_option_text\": \"En contra\",\n      \"int_option_order\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", ""]
            },
            "description": "Crea una encuesta tipo single choice con 2 opciones"
          },
          "response": []
        },
        {
          "name": "Crear Encuesta Múltiple",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"int_meeting_id\": {{meeting_id}},\n  \"str_title\": \"¿Qué mejoras quieres para el edificio?\",\n  \"str_description\": \"Selecciona hasta 3 opciones\",\n  \"str_poll_type\": \"multiple\",\n  \"bln_is_anonymous\": true,\n  \"bln_requires_quorum\": false,\n  \"dec_minimum_quorum_percentage\": 0,\n  \"bln_allows_abstention\": true,\n  \"int_max_selections\": 3,\n  \"int_duration_minutes\": 60,\n  \"options\": [\n    {\"str_option_text\": \"Renovar piscina\"},\n    {\"str_option_text\": \"Agregar gimnasio\"},\n    {\"str_option_text\": \"Mejorar jardines\"},\n    {\"str_option_text\": \"Instalar cámaras\"},\n    {\"str_option_text\": \"Pintar fachada\"}\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", ""]
            }
          },
          "response": []
        },
        {
          "name": "Crear Encuesta de Texto Libre",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"int_meeting_id\": {{meeting_id}},\n  \"str_title\": \"¿Qué sugerencias tienes para mejorar la seguridad?\",\n  \"str_description\": \"Escribe tu sugerencia\",\n  \"str_poll_type\": \"text\",\n  \"bln_is_anonymous\": true,\n  \"bln_requires_quorum\": false,\n  \"dec_minimum_quorum_percentage\": 0,\n  \"bln_allows_abstention\": false,\n  \"options\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Gestionar Encuesta",
      "item": [
        {
          "name": "Listar Encuestas de una Reunión",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/polls/meeting/{{meeting_id}}/polls",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "meeting", "{{meeting_id}}", "polls"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener Encuesta por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/polls/{{poll_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "{{poll_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Iniciar Encuesta",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"duration_minutes\": 60\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/{{poll_id}}/start",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "{{poll_id}}", "start"]
            },
            "description": "Inicia la encuesta (cambia estado a 'active')"
          },
          "response": []
        },
        {
          "name": "Finalizar Encuesta",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/polls/{{poll_id}}/end",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "{{poll_id}}", "end"]
            },
            "description": "Finaliza la encuesta (cambia estado a 'closed')"
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Acceso Público (Sin Auth)",
      "item": [
        {
          "name": "Obtener Encuesta por Código (Público)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/polls/code/{{poll_code}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "code", "{{poll_code}}"]
            },
            "description": "Obtiene la encuesta usando el código - NO REQUIERE AUTENTICACIÓN"
          },
          "response": []
        }
      ]
    },
    {
      "name": "5. Votar (Público)",
      "item": [
        {
          "name": "Votar - A Favor (Público)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"int_option_id\": 1,\n  \"bln_is_abstention\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/code/{{poll_code}}/vote",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "code", "{{poll_code}}", "vote"]
            },
            "description": "Vota SIN AUTENTICACIÓN usando el código de la encuesta. NOTA: Cambia int_option_id por el ID real de la opción."
          },
          "response": []
        },
        {
          "name": "Votar - En Contra (Público)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"int_option_id\": 2,\n  \"bln_is_abstention\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/code/{{poll_code}}/vote",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "code", "{{poll_code}}", "vote"]
            }
          },
          "response": []
        },
        {
          "name": "Votar - Abstención (Público)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bln_is_abstention\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/code/{{poll_code}}/vote",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "code", "{{poll_code}}", "vote"]
            }
          },
          "response": []
        },
        {
          "name": "Votar - Texto Libre (Público)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"str_response_text\": \"Sugiero contratar más vigilantes en horario nocturno y mejorar la iluminación del parqueadero\",\n  \"bln_is_abstention\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/code/{{poll_code}}/vote",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "code", "{{poll_code}}", "vote"]
            },
            "description": "Para encuestas tipo 'text'"
          },
          "response": []
        },
        {
          "name": "Votar - Numérico (Público)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dec_response_number\": 50.00,\n  \"bln_is_abstention\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/code/{{poll_code}}/vote",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "code", "{{poll_code}}", "vote"]
            },
            "description": "Para encuestas tipo 'numeric'"
          },
          "response": []
        }
      ]
    },
    {
      "name": "6. Votar (Autenticado)",
      "item": [
        {
          "name": "Votar con Usuario Autenticado",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"int_option_id\": 1,\n  \"bln_is_abstention\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/polls/{{poll_id}}/vote",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "{{poll_id}}", "vote"]
            },
            "description": "Vota CON autenticación - usa el peso de votación del usuario desde meeting_invitations"
          },
          "response": []
        }
      ]
    },
    {
      "name": "7. Resultados",
      "item": [
        {
          "name": "Ver Estadísticas en Tiempo Real",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/polls/{{poll_id}}/statistics",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "{{poll_id}}", "statistics"]
            },
            "description": "Ver estadísticas mientras la encuesta está activa"
          },
          "response": []
        },
        {
          "name": "Ver Resultados Finales",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/polls/{{poll_id}}/results",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "polls", "{{poll_id}}", "results"]
            },
            "description": "Ver resultados finales (solo disponible cuando status='closed')"
          },
          "response": []
        }
      ]
    }
  ]
}
